<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:layout_margin="12dp">

    <RelativeLayout
        android:id="@+id/background_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/cc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web D Workshop"
            android:textSize="20dp" />
        <RelativeLayout
            android:id="@+id/underline"
            android:layout_below="@+id/cc_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/profileAccentColor"
            android:padding="10dp">
        </RelativeLayout>


        <TextView
            android:id="@+id/cc_decs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cc_title"
            android:layout_marginTop="5dp"
            android:textColor="@color/logo"
            android:text="Sun Aug 23 2020"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/cc_decs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cc_decs"
            android:layout_marginTop="5dp"
            android:text="The two days Web Development workshop."
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/underline1"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/cc_decs2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/profileAccentColor"
            android:padding="10dp">
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/underline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_button1"
                    android:textColor="@color/logo1"
                    android:text="FEEDBACK" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/logo"
                    android:text=" RESOURCES" />




            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>